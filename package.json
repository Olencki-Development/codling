{
  "name": "codling",
  "version": "1.0.0",
  "type": "module",
  "description": "Monorepo for codling packages",
  "license": "MIT",
  "author": "Brian Olencki",
  "homepage": "https://github.com/Olencki-Development/codling#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Olencki-Development/codling.git"
  },
  "scripts": {
    "build": "lerna run build --stream",
    "clean": "lerna run clean --parallel",
    "clean:all": "npm run clean && lerna clean -y && rimraf node_modules",
    "format": "prettier --write '**/*.{ts,js,json}'",
    "lint": "eslint '**/*.{ts,js,json}'",
    "prepare": "npx husky install",
    "test": "lerna run test --stream",
    "test:coverage": "lerna run test:coverage --stream",
    "test:types": "lerna run test:types",
    "watch": "nodemon"
  },
  "workspaces": [
    "packages/environments",
    "packages/testable",
    "packages/utils"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "eslint": "^8.28.0",
    "husky": "^8.0.2",
    "lerna": "^6.1.0",
    "lint-staged": "^13.1.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.9.4"
  },
  "lint-staged": {
    "**/*.+(ts|js|json)": [
      "npm run format",
      "npm run lint"
    ]
  }
}
